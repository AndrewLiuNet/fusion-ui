{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "declaration": true,
    "declarationDir": ".",
    "emitDeclarationOnly": true,
    "baseUrl": "../fusion-ui/dist/types",
    "types": ["node"]
  },

  "exclude": [
    "node_modules",
    "build",
    "dist",
    "test",
    "docs",
    "playground",
    "gulpfile.ts",
    "**__/test/__**/*",
    "*ts",
    "*d.ts",
    "**/style/**/*",
    "**/*.md"
  ]
}
