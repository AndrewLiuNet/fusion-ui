{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "baseUrl": "./",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./packages/fusion-ui/dist/types",
    "types": ["node"],
    "paths": {
      "@fusion-ui/components": ["packages/components", "@fusion-ui/components"],
      "@fusion-ui/constants": ["packages/constants", "@fusion-ui/constants"],
      "@fusion-ui/hooks": ["packages/hooks", "@fusion-ui/hooks"],
      "@fusion-ui/theme": ["packages/theme", "@fusion-ui/theme"],
      "@fusion-ui/utils": ["packages/utils", "@fusion-ui/utils"]
    }
  },

  "exclude": [
    "node_modules",
    "build",
    "dist",
    "test",
    "docs",
    "playground",
    "gulpfile.ts",
    "**__/test/__**/*",
    "**/style/**/*",
    "**/*.md"
  ]
}
